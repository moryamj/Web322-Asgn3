<%- include('partials/header') %>

<div class="text-center py-5">
    <h1 class="display-4 fw-bold text-primary">Welcome to Task Manager</h1>
    <p class="lead mb-4">A secure task management app built with MongoDB (users) + PostgreSQL (tasks)</p>
    
    <div class="my-5">
        <% if (!user) { %>
            <a href="/auth/register" class="btn btn-success btn-lg mx-2">Register Now</a>
            <a href="/auth/login" class="btn btn-outline-primary btn-lg mx-2">Login</a>
        <% } else { %>
            <p class="text-success fs-4">You are already logged in, <%= user.username %>!</p>
            <a href="/dashboard" class="btn btn-primary btn-lg">Go to Dashboard</a>
        <% } %>
    </div>
</div>

<%- include('partials/footer') %>