<%- include('partials/header') %>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Your Tasks</h2>
    <a href="/tasks/add" class="btn btn-success">+ Add New Task</a>
</div>

<% if (typeof error !== 'undefined' && error) { %>
    <div class="alert alert-danger"><%= error %></div>
<% } %>

<% if (tasks.length === 0) { %>
    <div class="alert alert-info">No tasks yet. <a href="/tasks/add">Create your first task!</a></div>
<% } else { %>
<table class="table table-hover align-middle">
    <thead class="table-primary">
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Due Date</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        <% tasks.forEach(task => { %>
        <tr>
            <td><strong><%= task.title %></strong></td>
            <td><%= task.description || 'No description' %></td>
            <td><%= task.dueDate ? new Date(task.dueDate).toLocaleDateString() : '-' %></td>
            <td>
                <span class="badge <%= task.status === 'completed' ? 'bg-success' : 'bg-warning' %>">
                    <%= task.status %>
                </span>
            </td>
            <td>
                <a href="/tasks/edit/<%= task.id %>" class="btn btn-sm btn-warning">Edit</a>
                
                <form method="POST" action="/tasks/delete/<%= task.id %>" style="display:inline;" onsubmit="return confirm('Delete this task?')">
                    <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                </form>

                <form method="POST" action="/tasks/status/<%= task.id %>" style="display:inline;">
                    <button type="submit" class="btn btn-sm <%= task.status === 'completed' ? 'btn-outline-secondary' : 'btn-success' %>">
                        <%= task.status === 'completed' ? 'Mark Pending' : 'Complete' %>
                    </button>
                </form>
            </td>
        </tr>
        <% }) %>
    </tbody>
</table>
<% } %>

<%- include('partials/footer') %>